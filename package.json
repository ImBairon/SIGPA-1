{
    "name": "sigpa-dashboard",
    "version": "1.0.0",
    "description": "SIGPA Dashboard - Sistema de Gestión Agrícola",
    "main": "index.html",
    "scripts": {
        "start": "http-server -p 8080 -c-1",
        "dev": "live-server --port=8080 --open=/index.html",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "format:js": "prettier --write \"js/**/*.js\"",
        "format:html": "prettier --write \"*.html\" \"partials/**/*.html\"",
        "format:css": "prettier --write \"css/**/*.css\"",
        "format:json": "prettier --write \"*.json\" \"data/**/*.json\"",
        "format:md": "prettier --write \"*.md\"",
        "lint:format": "prettier --check ."
    },
    "author": "SIGPA Team",
    "license": "MIT",
    "devDependencies": {
        "http-server": "^14.1.1",
        "live-server": "^1.2.2",
        "prettier": "^3.1.0",
        "prettier-plugin-tailwindcss": "^0.5.9",
        "zod": "^4.1.1",
        "zxcvbn": "^4.4.2"
    },
    "prettier": {
        "semi": true,
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 2,
        "useTabs": false,
        "bracketSpacing": true,
        "bracketSameLine": false,
        "arrowParens": "avoid",
        "endOfLine": "lf"
    }
}
